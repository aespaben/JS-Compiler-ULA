        div(class="col-md-8")
          h2(class="text-center mb-md-4") Ejemplo
          img(src="../img/compiler_example.png", width="750px")

      a(class="btn btn-success btn-back", href="#introduction") Atrás
      a(class="btn btn-success btn-next", href="#components") Siguiente

    section(id="components")
      h1(class="text-center") Componentes
      div(class="row")
        div(class="col-md-12 text-center")
          img(src="../img/compiler.png", height="550px")
      a(class="btn btn-success btn-back", href="#ula_language") Atrás
      a(class="btn btn-success btn-next", href="#examples") Siguiente

