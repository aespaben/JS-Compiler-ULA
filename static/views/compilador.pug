html
  head  
    link(rel="stylesheet", href="../css/style.css")
    link(rel="stylesheet", href="../css/bootstrap.min.css")
    title JS ULA Compiler
body
  // Barra de navegación.

  nav(class="navbar navbar-expand-lg navbar-dark bg-primary")
    ul(class="navbar-nav")
      li(class="nav-item")
        a(class="nav-link", href="/") Presentación

      li(class="nav-item active")
        a(class="nav-link", href="/compiler") Compilador
 
  // Compilador.

  div(class="container")
      div(class="row justify-content-md-center")
        h1 Compilador ULA JS
      
      div(class="pos")
        form(class="row mt-md-5 justify-content-md-center", action="/compiler", method="post")
          div(class="form-group")
              h3(class="text-center") Editor
              textarea(class="editor", name="editor", cols="30", rows="15")= code
          div(class="bottom")
            div(class="custom-control custom-checkbox my-1 mr-sm-2")
              input(class="custom-control-input", id="reset", type="checkbox", name="reset", value="1")
              label(class="custom-control-label", for="reset") Limpiar consola
              div(class="mt-md-4")
                button(class="btn btn-success") Compilar
          
          div(class="col-md-3 offset-md-2")
            h3(class="text-center") Consola
            textarea(class="console", name="console", cols="30", rows="15", readonly)= compilation

  script(src="../js/jquery.min.js")
  script(src="../js/popper.min.js")
  script(src="../js/bootstrap.min.js")